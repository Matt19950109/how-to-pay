<div class="container">  <!-- 全体を囲むコンテナ -->
  <dl>
    <br>

    <!-- データリスト -->
    <dt class="fs-5 fw-light">決済方法</dt>
    <dd class="fs-3 fw-bold mb-4"><%= @settlement.payment %><dd>
    <hr>
    <hr>

    <dt class="fs-5 fw-light">紐づいている銀行名</dt>
    <dd class="fs-3 fw-bold mb-4"><%= @settlement.bank.name %></dd>
    <hr>
    <hr>
    
  </dl>

  <!-- ボタングループ -->
  <div class="d-flex flex-column flex-md-row align-items-md-end gap-2">
    <%= link_to '編集', edit_settlement_path, class: "btn btn-outline-info fw-bold" %>
    <%= link_to '削除', settlement_path, data: { turbo_method: :delete }, class: "btn btn-outline-info fw-bold" %>
    <%= link_to '支出一覧ページに戻る', spendings_path, class: "btn btn-outline-info fw-bold" %>
  </div>
</div>